#include <dt-bindings/pinctrl/nrf-pinctrl.h>

/* 
Left side layout:
Skree tail
    Format:   
        Wire Color | Skree Node | MCU Node | Pin Code  
    Rows
        Red      R6 -  -  not connected
        Blck     R5 -  -  not connected
        Yellow   R4 -> 6  (P0.07 - HS)
        Green    R3 -> 9  (P0.26 - HS)
        Blue     R2 -> 10 (P0.27 - HS)
        White    R1 -> 11 (P0.06 - HS)
        Orange   TR -> 12 (P0.08 - HS)

    Columns
        Orange   C7  -  not connected
        White    C6  -  not connected
        Blue     C5  -  not connected
        Green    C4 -> A3 (P0.28 - LS)
        Yellow   C3 -> A2 (P0.30 - LS)
        Black    C2 -> A1 (P0.05 - HS)
        Red      C1 -> A0 (P0.04 - HS)
    Other
        ??????  LED -> 13 (P1.09 - HS)
PMW3610
    Format:   
        Wire Color | Sensor Node | MCU Node | Pin Code  
    Purple    VIN -> 3.3V
    Brown     GND -> GND
    Blue     SDIO -> MI   (P0.15 - HS)
    Yellow   SCLK -> SCLK (P0.11 - HS)
    Orange    NCS -> 5    (P1.08 - HS)
    Red       Mot -> D2   (P0.10 - LS)
*/

&pinctrl {
    uart0_default: uart0_default {
        group1 {
            psels = <NRF_PSEL(UART_RX, 0, 8)>;
            bias-pull-up;
        };
        group2 {
            psels = <NRF_PSEL(UART_TX, 0, 6)>;
        };
    };

    uart0_sleep: uart0_sleep {
        group1 {
            psels = <NRF_PSEL(UART_RX, 0, 8)>,
                    <NRF_PSEL(UART_TX, 0, 6)>;
            low-power-enable;
        };
    };

    // SPI configuration for PMW3610 sensor
    spi1_default: spi1_default {
        group1 {
            psels = <NRF_PSEL(SPIM_SCK, 0, 11)>,   // SCLK
                    <NRF_PSEL(SPIM_MISO, 0, 15)>,  // SDIO (MI)
                    <NRF_PSEL(SPIM_CS, 1, 8)>;     // NCS
        };
    };

    spi1_sleep: spi1_sleep {
        group1 {
            psels = <NRF_PSEL(SPIM_SCK, 0, 11)>,
                    <NRF_PSEL(SPIM_MISO, 0, 15)>,
                    <NRF_PSEL(SPIM_CS, 1, 8)>;
            low-power-enable;
        };
    };

    // GPIO configuration for additional pins
    gpio_default: gpio_default {
        group1 {
            // Matrix rows (outputs, high-side)
            psels = <NRF_PSEL(GPIO_OUT, 0, 7)>,   // R4 - Yellow
                    <NRF_PSEL(GPIO_OUT, 0, 26)>,  // R3 - Green
                    <NRF_PSEL(GPIO_OUT, 0, 27)>,  // R2 - Blue
                    <NRF_PSEL(GPIO_OUT, 0, 6)>,   // R1 - White
                    <NRF_PSEL(GPIO_OUT, 0, 8)>;   // TR - Orange
        };
        group2 {
            // Matrix columns (inputs with pull-up)
            psels = <NRF_PSEL(GPIO_IN, 0, 28)>,   // C4 - Green
                    <NRF_PSEL(GPIO_IN, 0, 30)>,   // C3 - Yellow
                    <NRF_PSEL(GPIO_IN, 0, 5)>,    // C2 - Black
                    <NRF_PSEL(GPIO_IN, 0, 4)>;    // C1 - Red
            bias-pull-up;
        };
        group3 {
            // LED pin
            psels = <NRF_PSEL(GPIO_OUT, 1, 9)>;   // LED
        };
        group4 {
            // PMW3610 motion pin
            psels = <NRF_PSEL(GPIO_IN, 0, 10)>;   // Mot - Red (low-side)
            bias-pull-up;
        };
    };
};
